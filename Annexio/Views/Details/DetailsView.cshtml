@model Annexio.Models.BasicDetails

<ul class="nav nav-tabs">
    <li class="nav-item">
        <a class="nav-link active" data-toggle="tab" href="#home">Home</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" data-toggle="tab" href="#currencies">Currencies</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" data-toggle="tab" href="#languages">Languages</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" data-toggle="tab" href="#borders">Borders</a>
    </li>
</ul>
<div id="myTabContent" class="tab-content">
    <div class="tab-pane fade show active" id="home">
        <h1 class="display-3">@Model.Name</h1>
        @if (@Model.IsCountry)
        {
            <h2 class="display-4">((CountryDetails) @Model).Capital</h2>
        }

        <p class="lead">Population: @Model.Population</p>
    </div>
    <div class="tab-pane fade" id="currencies">
        <ul id="currency-list" class="list-group">
            @foreach (var currency in @Model.Currencies)
            {
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    @currency.Name
                </li>
            }
        </ul>
    </div>
    <div class="tab-pane fade" id="languages">
        <ul id="languages-list" class="list-group">
            @foreach (var language in @Model.Languages)
            {
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    @language.Name
                </li>
            }
        </ul>
    </div>
    <div class="tab-pane fade" id="borders">
        <ul id="border-list" class="list-group">
            @foreach (var border in @Model.Borders)
            {
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    @border
                </li>
            }
        </ul>
    </div>
</div>

<p class="lead">
    <a class="btn btn-primary btn-lg" onclick="history.go(-1);" role="button">Go back</a>
</p>
